@model Simple_Calculator.Models.CalculatorModel
@{
   
    Layout = null;
}

@using(Html.BeginForm())
{
<fieldset>
    <h1 style="color:blue">Operation Of Two Numbers</h1><br />
    @Html.EditorFor(x => x.A) 
    <br /> <br />
    @Html.EditorFor(x => x.B) 
    <br /> <br />
    <input type="submit"
           value="add"
           name="command" />
    <input type="submit"
           value="subtract"
           name="command" />
    <input type="submit"
           value="multiply"
           name="command" />
    <input type="submit"
           value="divide"
           name="command" /> <br /> <br />
    <h2 style="color:red">
        @Html.Label("Result is :")
        @Html.DisplayFor(x => x.Result)
    </h2>
</fieldset>
}